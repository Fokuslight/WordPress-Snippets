(function($) {

	$.fn.adaptive = function(o) {
		return this.each(function(index, elem) {
			
			var defaults = {
				marginAuto: true,
				marginTop: 0,
				marginRight: 0,
				marginBottom: 0,
				marginLeft: 0,
				paddingTop: 0,
				paddingRight: 0,
				paddingBottom: 0,
				paddingLeft: 0,
				fontSize: 14
			}

			var settings        = $.extend({}, defaults, o);
				if((settings.marginAuto) = true) {
					marginAuto = 'auto'
				}
			var e    =  $(elem),
				eW   =  e.width(),
				w    =  $(window),
				wW   =  w.width(),
				mA   =  settings.marginAuto,
				eMT  =  settings.marginTop,
				eMR  =  settings.marginRight,
				eMB  =  settings.marginBottom,
				eML  =  settings.marginLeft,
				ePT  =  settings.paddingTop,
				ePR  =  settings.paddingRight,
				ePB  =  settings.paddingBottom,
				ePL  =  settings.paddingLeft,
				eFS  =  settings.fontSize;

			w.resize(function() {

				var nWW  = w.width(),
					nEW  = (eW*nWW)/wW,
					nMA  = mA,
					nEFS = (eFS*nWW)/wW,
					nEMT = (eMT*nWW)/wW,
					nEMR = (eMR*nWW)/wW,
					nEMB = (eMB*nWW)/wW,
					nEML = (eML*nWW)/wW,
					nEPT = (ePT*nWW)/wW,
					nEPR = (ePR*nWW)/wW,
					nEPB = (ePB*nWW)/wW,
					nEPL = (ePL*nWW)/wW;
				
				e.css({
					width          :  nEW,
					marginTop      :  nEMT,
					marginRight    :  nEMR,
					marginBottom   :  nEMB,
					marginLeft     :  nEML,
					paddingTop     :  nEPT,
					paddingRight   :  nEPR,
					paddingBottom  :  nEPB,
					paddingLeft    :  nEPL,
					fontSize       :  nEFS + 'px'
				})
			})
		})
	}

})(jQuery);
